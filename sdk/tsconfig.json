{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./target",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": {
      "math": ["./math/pkg/math"]
    },
    "types": ["mocha", "chai"],
    "declaration": true
  },
  "exclude": ["tests"]
}
